<?xml version="1.0" encoding="UTF-8"?>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required device capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arkit</string>
        <string>camera</string>
        <string>microphone</string>
    </array>
    
    <!-- Camera and Microphone Permissions -->
    <key>NSCameraUsageDescription</key>
    <string>This app uses the camera for AR body tracking and form analysis during workouts.</string>
    
    <key>NSMicrophoneUsageDescription</key>
    <string>We need microphone access to hear your voice commands and questions for the AI coach.</string>
    
    <!-- Photo Library Permissions -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>We need access to save your workout videos and progress photos.</string>
    
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>We need permission to save workout videos and progress photos to your photo library.</string>
    
    <!-- Speech Recognition -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>We need speech recognition to understand your voice commands and questions.</string>
    
    <!-- Disable camera effects -->
    <key>NSCameraReactionEffectGesturesEnabledDefault</key>
    <false/>
    
    <!-- API Keys - These will be loaded from environment variables in production -->
    <key>OPENAI_API_KEY</key>
    <string>YOUR_OPENAI_API_KEY_HERE</string>
    
    <key>ELEVENLABS_API_KEY</key>
    <string>YOUR_ELEVENLABS_API_KEY_HERE</string>
    
    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>set-fitness</string>
            </array>
        </dict>
    </array>
    
    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>processing</string>
    </array>
    
    <!-- Privacy Controls -->
    <key>NSAppleMusicUsageDescription</key>
    <string>We need access to control music during workouts (optional).</string>
    
    <key>NSMotionUsageDescription</key>
    <string>We need motion data to track your workout form and progress.</string>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>elevenlabs.io</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
            </dict>
        </dict>
    </dict>
</dict>
</plist>
